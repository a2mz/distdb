<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%-5level] - %logger: %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="io.atomix" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>